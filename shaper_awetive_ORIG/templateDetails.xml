				<!--End Preset1-->

                <!--Start Preset2-->
                <field name="preset2_bg" class="preset2" type="picker" default="#f0ece1" label="Background Color" />
                <field name="preset2_text" class="preset2" type="picker" default="#656565" label="Text Color" />
